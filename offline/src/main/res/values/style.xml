<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fulora" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/persian</item>
        <item name="colorPrimaryVariant">@color/pine</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/panache</item>
        <item name="colorSecondaryVariant">@color/salem</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/roboto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fulora.Fullscreen" parent="Theme.Fulora">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ThemeOverlay.Fulora.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
    </style>
</resources>