<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login">

    <activity
        android:id="@+id/onboardingActivity"
        android:name="com.fulora.app.onboarding.OnboardingActivity"
        android:label="OnboardingActivity"
        tools:layout="@layout/activity_onboarding"/>
    <action
        android:id="@+id/action_global_signInActivity"
        app:destination="@id/signInActivity" />
    <activity
        android:id="@+id/signInActivity"
        android:name="com.fulora.app.sign_in.SignInActivity"
        android:label="SignInActivity"
        tools:layout="@layout/activity_sign_in"/>
    <action
        android:id="@+id/action_global_createAccountFragment"
        app:destination="@id/createAccountFragment" />
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.fulora.app.create_account.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account"/>
</navigation>